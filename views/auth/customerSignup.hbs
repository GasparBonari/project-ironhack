<div id="form" style="margin-top: 150px; margin-left: 30px;">
  <form action="/customer/customerSignup" method="POST" class="form-horizontal">
    <h2>Customer Sign Up</h2>
    <label>
      <input
        class="form-control mb-3"
        type="text"
        name="username"
        placeholder="Username"
      />
    </label>

    <label>
      <input
        class="form-control mb-3"
        type="email"
        name="email"
        placeholder="eMail"
      />
    </label>

    <label>
      <input
        class="form-control mb-3"
        type="password"
        name="password"
        placeholder="Password"
      />
    </label>

    <label>
      <input
        class="form-control mb-3"
        type="password"
        name="password2"
        placeholder="Retype password"
      />
    </label>

    <button class="btn btn-primary" type="submit">Create customer account</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>