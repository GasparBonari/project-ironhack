{{#if userInSession}}

  <h2>Edit Customer:
    {{userInSession.username}}</h2>

  <form action="/customer/{{userInSession._id}}/edit" method="post">

    <label>
      eMail:
      <input
        class="form-control"
        type="text"
        name="email"
        value="{{userInSession.email}}"
      />
    </label>

    <label>
      Fullname:
      <input
        class="form-control"
        type="text"
        name="fullname"
        value="{{userInSession.fullname}}"
      />
    </label>

    <label>
      Street:
      <input
        class="form-control"
        type="text"
        name="street"
        value="{{userInSession.street}}"
      />
    </label>

    <label>
      Housenumber:
      <input
        class="form-control"
        type="text"
        name="housenumber"
        value="{{userInSession.housenumber}}"
      />
    </label>

    <label>
      Postcode:
      <input
        class="form-control"
        type="text"
        name="postcode"
        value="{{userInSession.postcode}}"
      />
    </label>

    <label>
      City:
      <input
        class="form-control"
        type="text"
        name="city"
        value="{{userInSession.city}}"
      />
    </label>

    <label>
      Country:
      <input
        class="form-control"
        type="text"
        name="country"
        value="{{userInSession.country}}"
      />
    </label>

    <button class="btn btn-primary" type="submit">Save changes for
      {{userInSession.username}}</button>
  </form>

{{else}}

  <br /><p>Still no logged in user, sorry!</p>

{{/if}}