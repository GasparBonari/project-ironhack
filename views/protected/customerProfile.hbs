{{! views/users/user-profile.hbs }}

{{#if userInSession}}
  <h1>Welcome to your profile page, {{userInSession.username}}!</h1>
  <h2>Your {{userInSession.username}} account details!</h2>
<hr />
   <a href="/customer/{{userInSession._id}}/edit">Edit {{userInSession.username}} details</a>
   <p>Id: {{userInSession._id}}</p>
  <hr />
  
  <p>eMail: {{userInSession.email}}</p>
  <p>Fullname: {{userInSession.fullname}}</p>
  <p>Adress:
    {{userInSession.street}}
    {{userInSession.housenumber}} - 
    {{userInSession.city}}
    {{userInSession.country}}
  <p>Order history:
    {{#each customer.order}}
      <a>{{name}} | </a>
    {{/each}}
  </p>
  <hr />
  <form action="/customer/customerProfile/{{userInSession._id}}/delete" method="POST">
    <button>Delete {{userInSession.username}} account</button>
  </form>


{{else}}

  <br /><p>Still no logged in user, sorry!</p>

{{/if}}