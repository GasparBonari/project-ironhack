<div id="login-form" style="margin-top: 150px; margin-left: 20px;">
  <div class="row justify-content-center">
    <div class="col-md-6 center-div">
      <form action="/customer/CustomerLogin" method="POST" class="form-horizontal">
      <h2 class="alert alert-success"
      role="alert">You have successfully logged out!</h2>
      <a class="btn btn-secondary" href="/">Go to Home page</a>

      <h2>Customer Log In again</h2>
        <label>
          <input
            class="form-control  mb-3"
            type="text"
            name="username"
            placeholder="Username"
          />
        </label>

        <label>
          <input
            class="form-control  mb-3"
            type="password"
            name="password"
            placeholder="Password"
          />
        </label>

        <button class="btn btn-primary" type="submit">Log In</button>

        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>