<div class="row">
  <!-- Menu -->
  <div class="col-md-8">

    <div class="d-flex flex-row justify-content-between">
      <h2>Menu</h2>

      <div class="text-left mt-3">
        <a href="/" class="btn btn-secondary">Back to Restaurants</a>
      </div>
    </div>

    <div class="row">
      {{#each restaurant.menu}}
        <div class="mb-3">
          <div class="card d-flex flex-row align-items-md-center">
            <img src="{{image}}" alt="{{name}} Image" class="card-img-top" style="width: 130px">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <p class="card-text">Price: ${{price}}</p>
            </div>
            <button onclick="addToCart('{{name}}', {{price}})">Cart</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <!-- Cart -->
  <div class="col-md-4 border rounded p-3">
    <h2>Cart</h2>
    <ul id="cart-list" class="list-unstyled"></ul>

    <div class="mt-3">
      <h4>Total: $<span id="totalAmount">0.00</span></h4>
    </div>

    <!-- Form section -->
    <form id="checkoutForm" class="mt-3">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required value="{{userInSession.username}}">
      </div>

      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" required value="{{userInSession.email}}">
      </div>

      <div class="form-group">
        <label for="street">Address:</label>
        <input type="text" class="form-control" id="street" name="street" required value="{{userInSession.street}}{{userInSession.housenumber}} - {{userInSession.postcode}} {{userInSession.city}} {{userInSession.country}}">
      </div>

      <!-- Display restaurant information if needed -->
      <div class="form-group">
        <label for="restaurantName">Restaurant Name:</label>
        <input type="text" class="form-control" id="restaurantName" name="restaurantName" value="{{restaurant.name}}">
      </div>

      <div class="text-right mt-3">
        <button class="btn btn-primary">Checkout</button>
      </div>
    </form>
  </div>
</div>