<div class="container mt-4">
    
  <div class="text-center">
    <img src="{{restaurant.image}}" alt="{{restaurant.name}} Image" class="img-fluid rounded">
  </div>

  <div class="mt-4">
    <h1>{{restaurant.name}}</h1>
  </div>

  <div class="mt-4">
    <h2>Menu</h2>
    <div class="row">
        {{#each restaurant.menu}}
        <div class="col-md-4 mb-3">
            <div class="card">
            <img src="{{image}}" alt="{{name}} Image" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">Price: ${{price}}</p>
                <!-- Add more details if needed -->
            </div>
            </div>
        </div>
        {{/each}}
    </div>
  </div>
</div>