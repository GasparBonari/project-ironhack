<div id="form" style="margin-top: 150px; margin-left: 90px;">
  <div class="row justify-content-center">
    <div class="col-md-4 center-div">
      <form action="/manager/managerCreate" method="POST" class="form-horizontal">
        <h2 style="text-align: center;">New Manager</h2>
        <label>
          Managername
          <input
            class="form-control mb-3"
            type="text"
            name="username"
            placeholder="manager_name"
          />
        </label>

        <label>
          Email
          <input
            class="form-control mb-3"
            type="email"
            name="email"
            placeholder="newManager@gmail.com"
          />
        </label>

        <label>
          Password
          <input
            class="form-control mb-3"
            type="password"
            name="password"
            placeholder="********"
          />
        </label>

        <label>
          Password check
          <input
            class="form-control mb-3"
            type="password"
            name="password2"
            placeholder="********"
          />
        </label>

        <button class="btn btn-primary" type="submit">Create account</button>

        {{! error message will be added here }}

        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}

      </form>
    </div>
  </div>
</div>
