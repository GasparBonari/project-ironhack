<div id="login-form" style="margin-top: 150px; margin-left: 90px;">
  <div class="row justify-content-center">
    <div class="col-md-4 center-div">
      <form action="/manager/courierLogin" method="POST" class="form-horizontal">
        <h2>Courier Log In</h2>
        <label>
          <input
            class="form-control mb-3"
            type="text"
            name="username"
            placeholder="courier_name"
          />
        </label>

        <label>
          <input
            class="form-control mb-3"
            type="password"
            name="password"
            placeholder="Your password"
          />
        </label>

        <button class="btn btn-primary" type="submit">Log In</button>

        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>