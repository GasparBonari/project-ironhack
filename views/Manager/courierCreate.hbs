<div id="form" style="margin-top: 150px; margin-left: 30px;">
  <h2>New Courier registration form</h2>
  <form action="/manager/courierCreate" method="POST">
 
    <label> Couriername
      <input type="text" name="username" placeholder="courier_name" />
    </label>
 
    <label> Email
      <input type="email" name="email" placeholder="newCourier@gmail.com" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

       <label> Password check
      <input type="password" name="password2" placeholder="********" />
    </label>
 
    <button type="submit">Create account</button>
 
    {{!-- error message will be added here --}}

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}

  </form>
</div>