<div id="form" style="margin-top: 150px; margin-left: 30px;">

  <form action="/manager/courierCreate" method="POST" class="form-horizontal">
    <h2>New Courier registration form</h2>
    <label>
      Couriername
      <input
        class="form-control mb-3"
        type="text"
        name="username"
        placeholder="courier_name"
      />
    </label>

    <label>
      Email
      <input
        class="form-control mb-3"
        type="email"
        name="email"
        placeholder="newCourier@gmail.com"
      />
    </label>

    <label>
      Password
      <input
        class="form-control mb-3"
        type="password"
        name="password"
        placeholder="********"
      />
    </label>

    <label>
      Password check
      <input
        class="form-control mb-3"
        type="password"
        name="password2"
        placeholder="********"
      />
    </label>

    <button class="btn btn-primary" type="submit">Create account</button>

    {{! error message will be added here }}

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>