<h1>Restaurant management</h1>
{{#if userInSession}}
  <head>
    <h2>This is your page, {{userInSession.username}}!</h2>
  </head>
  <body>
    <p>
      name:
      {{userInSession.username}}<br />
      Id:
      {{userInSession._id}}<br />
    </p>

    <p>eMail: {{userInSession.email}}</p><br />
    <p>
      Role:
      {{userInSession.role}}<br />
    </p>
    <p>
      Adress:<br />
      Country:
      {{userInSession.country}}<br />
      City:
      {{userInSession.city}}<br />
    </p>
  </body>

  <a href="/manager/managerMain/createRestaurant">Create new restaurant</a>
  <a> | </a>
  <a href="/manager/managerMain/restaurantList">Restaurant list</a>
